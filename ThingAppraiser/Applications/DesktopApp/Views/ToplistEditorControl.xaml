<UserControl x:Class="ThingAppraiser.DesktopApp.Views.ToplistEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:ThingAppraiser.DesktopApp.Models"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">

    <StackPanel>
        <ListView ItemsSource="{Binding ToplistItems}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="models:ToplistItem">
                    <StackPanel Orientation="Vertical">
                        <TextBox Text="{Binding Name}"
                                 VerticalAlignment="Top"
                                 MaxLength="80"
                                 Width="600"
                                 materialDesign:HintAssist.Hint="Top list item" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>

    <ProjectReference Include="..\..\Libraries\ThingAppraiser.Models\ThingAppraiser.Models.csproj" />
    <ProjectReference Include="..\..\Libraries\ThingAppraiser.OutputProcessing\ThingAppraiser.OutputProcessing.csproj" />

<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      throwConfigExceptions="true"
      internalLogLevel="Off">

    <!--
    See https://github.com/nlog/nlog/wiki/Configuration-file
    for information on customizing logging rules and outputs.
     -->
    <targets>
        <target name="logfile" xsi:type="File" fileName="${basedir}/logs/${shortdate}.log"
                layout="${longdate} | ${pad:padding=5:inner=${uppercase:${level}}} |
${logger} | ${replace-newlines:${message}} |
${onexception:${newline}${exception:format=toString,Data:maxInnerExceptionLevel=10}"
                concurrentWrites="true" keepFileOpen="false" />

        <target name="logconsole" xsi:type="Console" />
    </targets>

    <rules>
        <!-- <logger name="*" minlevel="Info" writeTo="logconsole" /> -->
        <logger name="*" minlevel="Debug" writeTo="logfile" />
    </rules>
</nlog>
